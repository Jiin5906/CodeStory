DOCKER_USERNAME=your_dockerhub_username

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 프론트엔드 설정
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
VITE_GTM_ID=GTM-XXXXXXX

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 🚀 AI 성능 최적화 Feature Flags (신규 추가)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Phase 2.1: RAG 유사도 필터링
# 📌 권장: true (컨텍스트 정확도 향상)
AI_RAG_ENABLE_SIMILARITY_FILTER=true
AI_RAG_SIMILARITY_THRESHOLD=0.7

# Phase 1.1: Few-shot 프롬프트 개선
# ⚠️ A/B 테스트용: 처음에는 false로 시작, 1주일 후 true로 전환
AI_PROMPT_ENABLE_FEW_SHOT=false
AI_PROMPT_ENABLE_CHAIN_OF_THOUGHT=false

# 응답 최적화 설정
# 📌 기본값: max-tokens=150, temperature=0.5
AI_RESPONSE_MAX_TOKENS=150
AI_RESPONSE_TEMPERATURE=0.5

